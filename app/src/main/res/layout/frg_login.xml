<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="input UserName"
        app:layout_constraintBottom_toBottomOf="@id/ed_pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_pwd"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="input PassWord"
        app:layout_constraintEnd_toEndOf="@+id/ed_username"
        app:layout_constraintStart_toStartOf="@id/ed_username"
        app:layout_constraintTop_toBottomOf="@id/ed_username" />


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_pwd"
        app:layout_constraintStart_toStartOf="@+id/ed_pwd" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="register"
        android:textColor="#9C27B0"
        app:layout_constraintEnd_toEndOf="@+id/ed_pwd"
        app:layout_constraintTop_toBottomOf="@+id/ed_pwd" />

</androidx.constraintlayout.widget.ConstraintLayout>